{
    "name": "drah-figma",
    "version": "0.2.0",
    "description": "Simplified communications between ui and main for figma plugins",
    "exports": {
        "./main": "./build/main.js",
        "./ui": "./build/ui.js"
    },
    "//.": "The typesVersions is a workaround for typescript not supporting the exports field",
    "// ": "https://github.com/microsoft/TypeScript/issues/33079#issuecomment-773417113",
    "typesVersions": {
        "*": {
            "main": [
                "build/main"
            ],
            "ui": [
                "build/ui"
            ]
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "typecheck": "tsc -p . --noEmit",
        "build": "tsc -p ./tsconfig.json",
        "build:watch": "npm run build -- --watch",
        "format:check": "prettier --check \"src/**/*.{ts, tsx}\"",
        "lint:check": "eslint \"src/**/*.{js,ts,tsx}\"",
        "verify": "npm format:check && npm lint:check && npm test",
        "test": "jest",
        "test:watch": "yarn test --watch",
        "prepare": "yarn build"
    },
    "files": [
        "build"
    ],
    "author": "luke.john",
    "license": "ISC",
    "peerDependencies": {
        "drah-shared": "0.2.0"
    },
    "dependencies": {
        "drah-client": "0.2.1",
        "drah-server": "0.2.0"
    },
    "devDependencies": {
        "@figma/plugin-typings": "^1.19.3",
        "@tsconfig/node14": "^1.0.0",
        "@types/jest": "^26.0.15",
        "jest": "^26.6.1",
        "ts-jest": "^26.4.2",
        "typescript": "^4.1.2"
    }
}
